<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/find_hotinfo_layout_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/find_hotinfo_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="从广州去东莞仅需半个小时，美食美景通通都在等你!" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="源自：" />

                <TextView
                    android:id="@+id/find_hotinfo_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXX" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/find_hotinfo_layout_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/find_hot_yes" />

                    <TextView
                        android:id="@+id/find_hotinfo_txt_eye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="23" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/find_hotinfo_layout_1"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/find_hot_eye" />

                    <TextView
                        android:id="@+id/find_hotinfo_txt_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:text="12345" />
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/find_hotinfo_IV"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:layout_weight="1"
        android:background="@mipmap/find_hot_city"
        android:scaleType="fitXY"/>
</LinearLayout>



</LinearLayout>